<span class="nf">dd</span><span class="p">(</span><span class="nv">$post_supprimer</span><span class="p">);</span>
</code></pre></div></div>

<h2 id="restaurer-un-post-supprimer">restaurer un post supprimer</h2>

<div class="language-php highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="nv">$post_supprimer</span> <span class="o">=</span> <span class="nc">Post</span><span class="o">::</span><span class="nf">withTrashed</span><span class="p">()</span><span class="o">-&gt;</span><span class="nf">where</span><span class="p">(</span><span class="s1">'id'</span><span class="p">,</span> <span class="mi">1</span><span class="p">)</span><span class="o">-&gt;</span><span class="nf">restore</span><span class="p">();</span>
